  <script>
    getIngredients = () => {
      fetch('/api/ingredients')
        .then(res => res.json()) //response type
        .then(data => ingredients); //log the data;
    };

    init = () => {
      getIngredients();
      updateElement("ingredientsTable");
    }

    document.getElementById("btnFetchIngredients").addEventListener("click", function (event) {
      event.preventDefault();
      getIngredients();
      updateElement("ingredientsTable");
    });

    window.onload = (event) => {
      init();
    };

    updateElement = (el) => {
      if (ingredients.length > 0) {
        switch (el) {
          case "ingredientsTable": {
            let table = document.getElementById(el);
            table.removeChild(tbody);
            var tbody = document.createElement('tbody');
            data.forEach(function (ingredient) {
              let tr = table.insertRow(-1);
              tr.insertCell(-1).innerHTML = ingredient.name || "Name missing";
              tr.insertCell(-1).innerHTML = ingredient.brand || "Brand missing";
              tr.insertCell(-1).innerHTML = `
              <a class="btn btn-primary" href="#" role="button" id="btnFetchIngredients">
                Edit
