  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body class="bg-dark">
  <div class="container bg-light text-dark">
    <!-- BEGIN: NAVIGATION -->
    <nav class="navbar navbar-expand-md border-bottom">
      <a class="navbar-brand" href="/">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/create">Create</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- END: NAVIGATION -->
    <div class="row">
      <div class="col">
        <h1 class="py-4">Welcome to wtfood!</h1>

        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Pariatur, impedit ab. Expedita magnam voluptatem
          esse beatae, veritatis reprehenderit delectus excepturi unde laboriosam mollitia ex inventore, ipsam
          necessitatibus veniam exercitationem ipsa.</p>

        <table id="ingredientsTable" class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col" style="width: 30%">Ingredient</th>
              <th scope="col">Brand</th>
              <th scope="col" style="width: 15%">
                <button type="button" class="btn btn-success" id="btnFetchIngredients">
                  Fetch
                </button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ingredientModal">
                  Create
                </button>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="4" id="placeholder">No ingredients found. Click Fetch to populate.</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>


  </div>

  <!-- Modal -->
  <div class="modal fade" id="ingredientModal" tabindex="-1" role="dialog" aria-labelledby="ingredientModal"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ingredientModalLongTitle">Create a new ingredient!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/api/ingredients" method="POST" autocomplete="off" id="modalForm">

            <div class="form-group row mb-0">
              <label for="name" class="col-3 col-form-label">Name</label>
              <div class="col-9">
                <input type="text" class="form-control form-control-sm" name="name"
                  placeholder="Honey Roasted Peanuts" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="brand" class="col-3 col-form-label">Brand</label>
              <div class="col-9">
                <input type="text" class="form-control form-control-sm" name="brand" placeholder="President's Choice" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="servingText" class="col-3 col-form-label">Serving</label>
              <div class="col-sm-5 mb-sm-1 mb-md-0 pr-sm-1">
                <input type="text" class="form-control form-control-sm" name="servingText"
                  placeholder="Per 1/3 cup (50g)" />
              </div>
              <div class="col-sm-2 mb-sm-1 mb-md-0 px-sm-1">
                <input type="text" class="form-control form-control-sm" name="servingAmount" placeholder="50" />
              </div>
              <div class="col-sm-2 mb-sm-1 mb-md-0 pl-sm-1">
                <select class="form-control form-control-sm" name="servingUnit">
                  <option disabled class="bg-dark text-white">Solids</option>
                  <option selected>g</option>
                  <option>kg</option>
                  <option>lbs</option>
                  <option>tsp</option>
                  <option>tbsp</option>
                  <option disabled class="bg-dark text-white">Liquids</option>
                  <option>oz</option>
                  <option>mL</option>
                  <option>L</option>
                  <option>fl oz</option>
                </select>
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="calories" class="col-8 col-sm-3 col-form-label">Calories</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="calories" placeholder="300" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="fat" class="col-8 col-sm-3 col-form-label">Total Fat (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" step="0.01" class="form-control form-control-sm" name="fat" placeholder="21" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="fatSaturated" class="col-8 col-sm-3 col-form-label">Saturated (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" step="0.01" class="form-control form-control-sm" name="fatSaturated"
                  placeholder="3.5" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="fatTrans" class="col-8 col-sm-3 col-form-label">Trans (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" step="0.01" class="form-control form-control-sm" name="fatTrans" placeholder="0" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="cholesterol" class="col-8 col-sm-3 col-form-label">Cholesterol (mg)</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="cholesterol" placeholder="0" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="sodium" class="col-8 col-sm-3 col-form-label">Sodium (mg)</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="sodium" placeholder="55" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="carbs" class="col-8 col-sm-3 col-form-label">Carbohydrates (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="carbs" placeholder="17" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="fiber" class="col-8 col-sm-3 col-form-label">Fiber (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="fiber" placeholder="3" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="sugar" class="col-8 col-sm-3 col-form-label">Sugar (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="sugar" placeholder="7" />
              </div>
            </div>

            <div class="form-group row mb-0">
              <label for="protein" class="col-8 col-sm-3 col-form-label">Protein (g)</label>
              <div class="col-4 col-sm-9">
                <input type="number" class="form-control form-control-sm" name="protein" placeholder="10" />
              </div>
            </div>

            <!--Other fields-->
            <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="modalSubmit">Save Changes</button>
        </div>
      </div>
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
  <script src="/js/serializeArray.js"></script>

  <script>
    // Global variable containing our ingredients.
    // Doesn't seem like the best way to go about this...
    let ingredients = {};

    function postIngredient(opts) {
      console.log(opts);
      fetch('/api/ingredients', {
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/x-www-form-urlencoded'
        },
        method: 'POST',
        body: opts
      }).then(function (response) {
        return response.json();
      }).then(function (data) {
        console.log('Created ingredient:', data.html_url);
      });
    }

    function submitIngredient() {
      let form = document.getElementById('modalForm');
      let opts = serializeArray(form);
      console.log("opts=", opts);
      if (form) {
        postIngredient(opts);
      } else {
        ChromeSamples.log('Please enter in content to POST to a new Gist.');
      }
    }

    document.getElementById("modalSubmit").addEventListener("click", function () {
      submitIngredient();
    });

    // CWD v
    getIngredients = () => {
      fetch('/api/ingredients')
        .then(res => res.json())
        .then(data => ingredients = data);
    };

    init = () => {
      getIngredients();
    }

    document.getElementById("btnFetchIngredients").addEventListener("click", function (event) {
      event.preventDefault();
      getIngredients();
      updateElement("ingredientsTable");
    });

    window.onload = (event) => {
      //init();
    };

    updateElement = (el) => {

      switch (el) {
        case "ingredientsTable": {
          if (ingredients.length > 0) {
            let table = document.getElementById(el);
            let thead = table.getElementsByTagName('thead')[0];
            let tbody = table.getElementsByTagName('tbody')[0];

            table.removeChild(tbody);
            table.appendChild(document.createElement("tbody"));

            tbody = table.getElementsByTagName('tbody')[0];

            ingredients.forEach(function (ingredient) {
              let tr = tbody.insertRow(-1);
              tr.insertCell(-1).innerHTML = ingredient.name || "Name missing";
              tr.insertCell(-1).innerHTML = ingredient.brand || "Brand missing";
              tr.insertCell(-1).innerHTML = `
              <a class="btn btn-primary" href="#" role="button" id="btnFetchIngredients">
                Edit
              </a>
              <a class="btn btn-danger" href="#" role="button" id="btnFetchIngredients">
                Delete
              </a>
              `
            });
          }
        }
      }

    };
  </script>
</body>

</html>